{
    "compilerOptions": {
        "baseUrl" : "./scripts/",
        "module": "system",
        "alwaysStrict" : true,
        "noImplicitAny": true,
        "noImplicitThis" : true,
        "strictNullChecks" : false,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "target": "es6",
        "lib" : ["dom","es6","dom.iterable","scripthost","es2016"],
        "noEmitOnError" : true,
        "forceConsistentCasingInFileNames": true,
        "outFile" : "build/mwosim.js"
    },
    "include" : [
      "scripts/lib/*.ts",
      "scripts/mwosim/data/*.ts",
      "scripts/mwosim/common/*.ts",
      "scripts/mwosim/framework/*.ts",
      "scripts/mwosim/**/*.ts",
      "scripts/mwosim-test/**/*.ts"
    ]
}
