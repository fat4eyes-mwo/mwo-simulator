{
    "compilerOptions": {
        "module": "system",
        "alwaysStrict" : true,
        "noImplicitAny": true,
        "noImplicitThis" : true,
        "strictNullChecks" : false,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "target": "es6",
        "lib" : ["DOM","ES6","DOM.Iterable","ScriptHost","ES2016"],
        "noEmitOnError" : true,
        "forceConsistentCasingInFileNames": true,
        "outFile" : "build/mwosim.js"
    },
    "include" : [
      "scripts/lib/*.ts",
      "scripts/common/*.ts",
      "scripts/data/*.ts",
      "scripts/*.ts",
      "test-scripts/**/*.ts"
    ]
}
